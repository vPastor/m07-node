extends layout.pug

block content
    h1 Chat
    form(id="send" action="/" method="POST")
      select(id="selectRoom", name="selectRoom")
        -for(var i = 1;i<10;i++){
        option(value=i) Sala de chat #{i}
        -}
      #chat(class="container border" style="width:400px;height:300px;overflow:scroll;margin-left:0")
      div(id="chat") #{text}
      input(type="text" id="msg" placeholder="")
      input(type="submit")

    script(type='text/javascript', src='/socket.io/socket.io.js')
    script(type='text/javascript', src='/js/chat.js')
  
     
          
